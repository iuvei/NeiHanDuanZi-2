<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.view.activity.MainActivity">

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <com.weibo.neihanduanzi.mvp.view.widget.Nav_RadioButton
            android:id="@+id/rb_home"
            style="@style/bottom_bar_radiobutton_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="首页"
            app:DrawableSize="25dp"
            android:checked="true"
            app:DrawableTop="@drawable/bottom_nav_radiobutton_icon_home" />


        <com.weibo.neihanduanzi.mvp.view.widget.Nav_RadioButton
            android:id="@+id/rb_duanyouxiu"
            style="@style/bottom_bar_radiobutton_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:DrawableSize="25dp"
            android:layout_weight="1"
            android:text="段友秀"
            app:DrawableTop="@drawable/bottom_nav_radiobutton_icon_duanyouxiu" />

        <com.weibo.neihanduanzi.mvp.view.widget.Nav_RadioButton
            android:id="@+id/rb_add"
            style="@style/bottom_bar_radiobutton_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:DrawableTop="@mipmap/add"
            app:DrawableSize="40dp"
            />

        <com.weibo.neihanduanzi.mvp.view.widget.Nav_RadioButton
            android:id="@+id/rb_discover"
            style="@style/bottom_bar_radiobutton_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="发现"
            app:DrawableSize="25dp"
            app:DrawableTop="@drawable/bottom_nav_radiobutton_icon_discovery" />

        <com.weibo.neihanduanzi.mvp.view.widget.Nav_RadioButton
            android:id="@+id/rb_my"
            style="@style/bottom_bar_radiobutton_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="我的"
            app:DrawableSize="25dp"
            app:DrawableTop="@drawable/bottom_nav_radiobutton_icon_my" />

    </RadioGroup>

</LinearLayout>
